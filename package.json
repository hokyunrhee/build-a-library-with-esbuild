{
  "name": "build-a-library-with-esbuild",
  "version": "0.0.0",
  "description": "How to bundle library with esbuild",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build-types": "tsc --project ./tsconfig.production.json",
    "build": "rimraf lib && node esbuild.config.js && npm run build-types",
    "doc": "rimraf docs && jsdoc -c ./.jsdoc.json",
    "test": "jest",
    "lint": "eslint --fix src"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "esbuild": "^0.14.23",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  }
}
